{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 2,
    "font-family-no-missing-generic-family-keyword": null,
    "at-rule-no-unknown": [true, {
        "ignoreAtRules": ["for", "function", "if", "each", "include", "mixin", "else"]
    }],
    "no-descending-specificity": null
  },
  "ignoreFiles": [
    "dist/**",
    "docs/**",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.snap"
  ]
}
